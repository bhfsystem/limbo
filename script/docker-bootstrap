#!/usr/bin/env bash

function main {
  local net_bridge="$1"; shift

  sudo aptitude install -y bridge-utils

  if ifconfig br0 2>/dev/null; then
    return 0
  fi

  sudo brctl addbr br0
  sudo ip addr add "${net_bridge}/24" dev br0
  sudo ip link set dev br0 up
  sudo ip addr show br0
}

main "$@"
