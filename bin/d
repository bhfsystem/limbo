#!/usr/bin/env bash

export VAGRANT_DEFAULT_PROVIDER="docker"

function main {
  local shome="$(cd -P -- "${BASH_SOURCE%/*}/.." && pwd -P)"
  source "$shome/script/profile"

  export VAGRANT_CWD="$shome"

  if [[ "$#" == 0 ]]; then
    echo "$(basename "$0"): up|destroy ssh|rsync|scp id media rebuild build|remove"
    return 0
  fi

  local nm_guest="$(basename "$0")"

  case "$(uname -s)" in
    Darwin)
      fga ssh "source .bash_profile; require; $nm_guest $*" # TODO remote doesn't load environment
      return $?
      ;;
  esac

  local nm_action="$1"; shift
  local nm_provider='docker'

  case "$nm_action" in
    remove)
      "$nm_guest" destroy -f
      ;;
    up)
      parity "$nm_action" "$nm_guest" "$@"
      ;;
    destroy)
      vagrant "$nm_action" "$nm_guest" "$@"
      ;;
    ssh|rsync|scp)
      parity "$nm_action" "$nm_guest" "$@"
      ;;
    id)
      cat "$(set +f; ls -td "$VAGRANT_CWD/.vagrant/machines/$nm_guest"/*/id | head -1)"; echo
      ;;
    media)
      docker commit "$(fga0 id)" ubuntu:vagrant # TODO hardcoded fga
      ;;
    rebuild)
      "$nm_guest" remove >/dev/null 2>&1 || true
      "$nm_guest" build
      ;;
    build)
      if [[ -n "${1:-}" ]]; then
        export IMAGE="$1"; shift
      fi
      "$nm_guest" up
      ;;
    *)
      vagrant "$nm_action" "$nm_guest" "$@"
      ;;
  esac
}

source sub "$BASH_SOURCE" "$@"
