#!/usr/bin/env bash

export VAGRANT_DEFAULT_PROVIDER="docker"

function main {
  local shome="$(cd -P -- "${BASH_SOURCE%/*}/.." && pwd -P)"
  source "$shome/script/profile"

  export VAGRANT_CWD="$HOME"

  if [[ "$#" == 0 ]]; then
    echo "$(basename "$0"): up|destroy ssh|rsync|scp id build"
    return 0
  fi

  local nm_action="$1"; shift
  local nm_guest="$(basename "$0")"
  local nm_provider='docker'

  case "$nm_action" in
    up)
      parity "$nm_action" "$nm_guest" "$@"
      ;;
    destroy)
      vagrant "$nm_action" "$nm_guest" "$@"
      ;;
    ssh|rsync|scp)
      parity "$nm_action" "$nm_guest" "$@"
      ;;
    id)
      cat "$(set +f; ls -td "$VAGRANT_CWD/.vagrant/machines/$nm_guest"/*/id | head -1)"; echo
      ;;
    media)
      env TMPDIR=/tmp/vagrant "$nm_provider" build # TODO share packer temporary files
      ;;
    rebuild)
      "$nm_guest" build
      "$nm_guest" remove >/dev/null 2>&1 || true
      "$nm_guest" add
      ;;
    build)
      "$nm_guest" destroy -f
      if [[ -n "${1:-}" ]]; then
        export IMAGE="$1"; shift
      fi
      "$nm_guest" up
      ;;
    remove)
      docker rmi ubuntu:vagrant
      ;;
    add)
      docker commit $($nm_guest id) ubuntu:vagrant
      ;;
    *)
      vagrant "$nm_action" "$nm_guest" "$@"
      ;;
  esac
}

source sub "$BASH_SOURCE" "$@"
